{

  "icons": {
    "16": "icon.png", "48": "icon48.png",
          "128": "icon128.png"
  },
  "background": {
    "persistent": false,
    "scripts": ["js/contextmenus.js"]
  },
  "name": "URL Shortener (goo.gl)",
  "short_name":"Shorten URL",
  "version": "1.1.1",
  "manifest_version": 2,
  "description": "Shortern the page/selected URL",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"

  },
  "permissions": ["tabs", "<all_urls>", "contextMenus","clipboardWrite"]
}
